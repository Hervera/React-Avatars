{
    "increment": false,
    "version": "package",
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            { "type": "chore", 
              "hidden": true
            },
            {}
          ]
        }
      }
    },
    "github": {
      "release": true
    },
    "git": {
      "tagName": "v${version}"
    }
}
